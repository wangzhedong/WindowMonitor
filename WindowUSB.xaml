<Window x:Class="WpfApp.WindowUSB"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="添加可信任u盘" Height="450" Width="800" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>
        <Label Content="当前插入u盘列表" Margin="40,0,0,0" HorizontalAlignment="Left"></Label>
        <ListBox Margin="20,20,0,10" Width="250" Name="LeftListBox" HorizontalAlignment="Left"/>
        <Label Content="已经许可的u盘列表" Margin="0,0,100,0" HorizontalAlignment="Right"></Label>
        <ListBox Margin="0,20,20,10" Width="250" Name="RightListBox" HorizontalAlignment="Right"  />
        <Button Name="AddButton" Height="23" Width="50" Margin="248,78,261,0" VerticalAlignment="Top" Click="AddButton_Click">Add &gt;&gt;</Button>
        <Button Name="RemoveButton" Height="23" Width="80" Margin="248,121,261,117" Click="RemoveButton_Click">&lt;&lt; Remove</Button>
        <Button Name="SaveButton" Height="23" Width="80" Margin="248,230,261,117" Click="SaveButton_Click">保存</Button>
        <Button Name="MonitorButton" Height="23" Width="80" Margin="248,280,261,100" Click="MonitorButton_Click" >打开监听</Button>

    </Grid>
</Window>
